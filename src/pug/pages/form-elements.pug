extends /pug/layouts/uikit
include /components/input/input-text/input-text
include /components/input/subscription-field/subscription-field
include /components/input/checkbox/checkbox
include /components/input/radio/radio
include /components/input/toggle/toggle
include /components/button-like/button-like
include /components/rate-button/rate-button
include /components/bullet-list/bullet-list
include /components/about-room/about-room
include /components/review/review
include /components/dropdown/dropdown
include /components/range-slider/range-slider
include /components/expandable-checkbox-list/expandable-checkbox-list
include /components/input/masked-text/masked-text
block variables
  -var title= "Form Flements"
block content
  .form-elements
    .form-elements__wrapper
      .form-elements__inner
        .text-field__wrapper
          +input-text('text field', 'Email')
        .text-field__wrapper
          +input-text('text-field', 'This is pretty awesome')(autofocus)
      .text-field__wrapper
          +subscription-field('text-field', 'Email')(autofocus)
      .text-field__wrapper
        h3.form-elements__title dropdown
        +dropdown()
      .text-field__wrapper
        +masked-text('masked text field', 'ДД.ММ.ГГГГ')
      .text-field__wrapper
          +expandable-checkbox-list()
    .form-elements__wrapper
      .form-elements__inner
        h3.form-elements__title Checkbox Buttons
        .form-elements__checkbox
          +checkbox('Можно курить')
          +checkbox('Можно с питомцами')(checked)
          +checkbox('Можно пригласить гостей (до 10 человек)')(checked)
      .form-elements__inner
        h3.form-elements__title Radio buttons
        .form-elements__radio
          +radio('Мужчина')(name='gender' checked)
          +radio('Женщина')(name='gender')
      .form-elements__inner
        h3.form-elements__title Toggle
        .form-elements__toggle
          +toggle('Получать спецпредложения')(class="toggle__inner" checked)
          +toggle('Получать спецпредложения')
      .form-elements__inner
        h3.form-elements__title like button
        .form-elements__button-like
          +button-like(2)(class="button-like__inner")
          +button-like(12)(class="button-like--active")
      .form-elements__inner
        h3.form-elements__title Rate button
        .form-elements__rate
          +rate-button(4, "rating1")(class="rate__inner")
          +rate-button(5, "rating2")
      .form-elements__inner
        h3.form-elements__title Checkbox Buttons
        .form-elements__checkbox
          +checkbox('Широкий коридор', 'Ширина коридоров в номере не менее 91 см.')
          +checkbox('Помощник для инвалидов', 'На 1 этаже вас встретит специалист  и проводит до номера.')
    .form-elements__wrapper
      .form-elements__inner
        +range-slider("Range Slider")
      .form-elements__inner
        h3.form-elements__title Buttons
        .form-elements__buttons
          button.button.button--blue click me
          button.button.button--blue(disabled) click me
        .form-elements__buttons
          button.button.button--white click me
          button.button.button--white(disabled) click me
        .form-elements__buttons
          button.button click me
          button.button(disabled) click me
        button.button.button--pay перейти к оплате
      .form-elements__inner
        h3.form-elements__title bullet list
        +bullet-list(["Нельзя с питомцами", "Без вечеринок и мероприятий", "Время прибытия — после 13:00, а выезд до 12:00"])
    .form-elements__wrapper
      .about-room
        +about-room('/assets/img/about-room/insert_emoticon.png', 'Комфорт', 'Шумопоглощающие стены')
        +about-room('/assets/img/about-room/location_city.png', 'Удобство', 'Окно в каждой из спален')
      .review
        +review('/assets/img/review/4el.jpg', 'Рулон Обоев', '5 дней назад', 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.')
