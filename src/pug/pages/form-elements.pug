extends ../layouts/uikit
include ../../components/input/input-text/input-text
include ../../components/input/checkbox/checkbox
include ../../components/input/radio/radio
include ../../components/input/toggle/toggle
include ../../components/button-like/button-like
include ../../components/rate-button/rate-button
block variables
  -var title= "Form Flements"
block content
  .form-elements
    .form-elements__wrapper
      .text-field__wrapper
        +input-text('text field', 'Email')
      .text-field__wrapper
        +input-text('text-field', 'This is pretty awesome')(autofocus)
    .form-elements__wrapper
      .form-elements__inner
        h3.form-elements__title Checkbox Buttons
        .form-elements__checkbox
          +checkbox('Можно курить')(class='checkbox__inner')
          +checkbox('Можно с питомцами')(class='checkbox__inner')(checked)
          +checkbox('Можно пригласить гостей (до 10 человек)')(checked)
      .form-elements__inner
        h3.form-elements__title Radio buttons
        .form-elements__radio
          +radio('Мужчина')(class="radio__inner" name='gender' checked)
          +radio('Женщина')(name='gender')
      .form-elements__inner
        h3.form-elements__title Toggle
        .form-elements__toggle
          +toggle('Получать спецпредложения')(class="toggle__inner" checked)
          +toggle('Получать спецпредложения')
      .form-elements__inner
        h3.form-elements__title like button
        .form-elements__button-like
          +button-like(2)(class="button-like__inner")
          +button-like(12)(class="button-like--active")
      .form-elements__inner
        h3.form-elements__title Rate button
        .form-elements__rate
          +rate-button(4, "rating1")(class="rate__inner")
          +rate-button(5, "rating2")
    .form-elements__wrapper
      .form-elements__inner
        h3.form-elements__title Buttons
        .form-elements__buttons
          button.button.button--blue click me
          button.button.button--blue(disabled) click me
        .form-elements__buttons
          button.button.button--white click me
          button.button.button--white(disabled) click me
        .form-elements__buttons
          button.button click me
          button.button(disabled) click me
        button.button.button--pay перейти к оплате