extends /layouts/uikit
include /components/input-text/input-text
include /components/subscription-field/subscription-field
include /components/checkbox/checkbox
include /components/radio/radio
include /components/toggle/toggle
include /components/button-like/button-like
include /components/pagination/pagination
include /components/rating-button/rating-button
include /components/bullet-list/bullet-list
include /components/about-room/about-room
include /components/review/review
include /components/dropdown/dropdown
include /components/range-slider/range-slider
include /components/expandable-checkbox-list/expandable-checkbox-list
include /components/date-dropdown/date-dropdown
include /components/button/button
include /components/logo/logo

block variables
  -
    const title = "Form Elements"

    const review = {
      name: 'Мурад Сарафанов',
      src: require('/src/assets/img/review/4el.jpg'),
      time: '5 дней назад',
      likes: '12',
      liked: true,
      comment: 'Великолепный матрас на&nbsp;кровати в&nbsp;основной спальне! А&nbsp;пуфик вообще потрясающий. И&nbsp;стены, действительно, шумоподавляющие. Выкрикивал комплименты повару&nbsp;&mdash; никто не&nbsp;жаловался из&nbsp;соседей.'
    }

    const checkboxList = [
      { label: 'Завтрак' }, { label: 'Письменный стол', checked: true },
      { label: 'Стул для кормления', checked: true }, { label: 'Кроватка', checked: true },
      { label: 'Телевизор' }, { label: 'Шампунь' }
    ]

    const aboutRoomItems = [
      {src: require("/src/assets/img/icons/insert-emoticon.svg"), title: "Комфорт", text: "Шумопоглощающие стены"},
      {src: require("/src/assets/img/icons/location-city.svg"), title: "Удобство", text: "Окно в каждой из спален"},
    ]
block content
  .form-elements
    header.form-elements__header
      +logo()
    .form-elements__wrapper
      .form-elements__row
        .form-elements__column
          .form-elements__block
            +input-text({ label: 'text field', placeholder: 'Email', type: 'email' })
          .form-elements__block
            +input-text({ label: 'text-field', placeholder: 'This is pretty awesome' })(autofocus)
          .form-elements__block
            +dropdown({
              label: 'dropdown',
              items: ['взрослые', 'дети', 'младенцы'],
              container: 'js-guest',
              holder: 'Сколько гостей',
              buttons: true
            })
          .form-elements__block
            +input-text({ label: 'masked text field', placeholder: 'ДД.ММ.ГГГГ', maskContainer: 'js-input-text__input' })
          .form-elements__block.form-elements__block_margin_l
            +date-dropdown({ label1: 'date Dropdown', label2: 'date Dropdown', container: 'js-double-date' })
          .form-elements__block.form-elements__block_margin_l.form-elements__block_size_s
            +date-dropdown({ label1: 'filter date dropdown', container: 'js-filter-date' })
          .form-elements__block.form-elements__block_margin_l
            +subscription-field({ label: 'subscription text field' })
        .form-elements__column
          .form-elements__block.form-elements__block_margin_l
            h3.form-elements__title Checkbox Buttons
            .form-elements__checkbox
              +checkbox('Можно курить')
              +checkbox('Можно с питомцами')(checked)
              +checkbox('Можно пригласить гостей (до&nbsp;10&nbsp;человек)')(checked)
          .form-elements__block.form-elements__block_margin_xl
            h3.form-elements__title Radio buttons
            .form-elements__radio
              .form-elements__radio-button
                +radio('Мужчина')(name='gender' checked)
              .form-elements__radio-button
                +radio('Женщина')(name='gender')
          .form-elements__block.form-elements__block_margin_l
            h3.form-elements__title Toggle
            .form-elements__toggle
              +toggle('Получать спецпредложения')(checked)
              +toggle('Получать спецпредложения')
          .form-elements__block.form-elements__block_margin_xl
            h3.form-elements__title like button
            .form-elements__button-like
              +button-like(2)
              +button-like(12, "liked")
          .form-elements__block.form-elements__block_margin_l
            h3.form-elements__title Rate button
            .form-elements__rate
              +rating-button(4, "rating1")
              +rating-button(5, "rating2")
        .form-elements__column
          .form-elements__block.form-elements__block_margin_l
            +range-slider({ label: "Range Slider", container: 'js-range-slider' })
          .form-elements__block.form-elements__block_margin_xl
            h3.form-elements__title Buttons
            .form-elements__buttons
              +button({ 'color': 'blue', 'tag': 'button', 'text': 'click me', "size": "m" })
              +button({ 'color': 'blue', 'tag': 'button', 'text': 'click me', "size": "m" })
            .form-elements__buttons
              +button({ 'color': 'white', 'tag': 'button', 'text': 'click me', "size": "m" })
              +button({ 'color': 'white', 'tag': 'button', 'text': 'click me', "size": "m" })
            .form-elements__buttons
              +button({ 'color': 'transparent', 'tag': 'button', 'text': 'click me', "size": "xs" })
              +button({ 'color': 'transparent', 'tag': 'button', 'text': 'click me', "size": "xs" })
            +button({ 'color': 'arrow', 'tag': 'button', 'text': 'перейти к оплате', "size": "m" })
          .form-elements__block.form-elements__block_margin_l
            h3.form-elements__title pagination
            +pagination()
      .form-elements__row.form-elements__row_margin_l
        .form-elements__column
          .form-elements__block.form-elements__block_size_s
            +dropdown({
              label: 'dropdown',
              items: ['спальни', 'кровати', 'ванные комнаты'],
              container: 'js-comfort',
              holder: 'Удобства'
            })
          .form-elements__block.form-elements__block_size_s
            +dropdown({
              label: 'dropdown',
              items: ['спальни', 'кровати', 'ванные комнаты'],
              container: 'js-comfort-expanded',
              holder: 'Удобства',
              expanded: true
            })
        .form-elements__column
          .form-elements__block
            +dropdown({
              label: 'dropdown',
              items: ['взрослые', 'дети', 'младенцы'],
              container: 'js-zero-guest-expanded',
              holder: 'Сколько гостей',
              buttons: true,
              expanded: true
            })
        .form-elements__column
          .form-elements__block
            +dropdown({
              label: 'dropdown',
              items: ['взрослые', 'дети', 'младенцы'],
              container: 'js-guest-expanded',
              holder: 'Сколько гостей',
              buttons: true,
              expanded: true
            })
      .form-elements__row.form-elements__row_margin_xl
        .form-elements__column
          .form-elements__block.form-elements__block_size_s
            +expandable-checkbox-list({
              label: 'expandable checkbox list',
              list: checkboxList,
              container: 'js-expand-box'
            })
          .form-elements__block.form-elements__block_margin_xl.form-elements__block_size_s
            +expandable-checkbox-list({
              label: 'expandable checkbox list',
              list: checkboxList,
              container: 'js-expand-box-expanded',
              expanded: true
            })
        .form-elements__column
          .form-elements__block.form-elements__block_size_s
            h3.form-elements__title rich Checkbox Buttons
            .form-elements__checkbox
              +checkbox('Широкий коридор', 'Ширина коридоров в&nbsp;номере не&nbsp;менее 91&nbsp;см.')
              +checkbox('Помощник для инвалидов', 'На&nbsp;1&nbsp;этаже вас встретит специалист и&nbsp;проводит до&nbsp;номера.')
        .form-elements__column
          .form-elements__block
            h3.form-elements__title bullet list
            +bullet-list([
              "Нельзя с питомцами",
              "Без вечеринок и мероприятий",
              "Время прибытия — после 13:00, а выезд до 12:00"])
      .form-elements__row
        .form-elements__column
          .form-elements__block
            +about-room(aboutRoomItems)
        .form-elements__column.form-elements__column_size_l
          .form-elements__block
            .form-elements__review
              +review(review)