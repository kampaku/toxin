extends /layouts/uikit
include /components/search-form/search-form
include /components/registration-form/registration-form
include /components/reservation-form/reservation-form
include /components/login-form/login-form
include /components/room-card/room-card
include /components/logo/logo
block variables
  -var title= "Cards"

block content
  .content_card
    header.cards__header
      +logo()
    .cards__wrapper
      .cards__column
        .cards__item
          +search-form()
        .cards__item
          +registration-form()
      .cards__column
        .cards__item
          +reservation-form('luxury')
        .cards__item
          +login-form()
      .cards__column
        .cards__item
          +room-card({luxury: true, number: 888, price: "9 900₽", star: 5, reviews: 145, images: ['room-1.jpg', 'room-2.jpg', 'room-1.jpg', 'room-2.jpg',]})
        .cards__item
          +room-card({luxury: false, number: 840, price: "9 900₽", star: 4, reviews: 65, images: ['room-2.jpg', 'room-1.jpg', 'room-2.jpg', 'room-1.jpg',]})