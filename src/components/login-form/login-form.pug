include /components/input-text/input-text
include /components/button/button
mixin login-form()
  form.login-form
    .login-form__inner
      h3.login-form__title Войти
      .login-form__text-fields
        .text-fields__inner
          +input-text({ placeholder: 'Email', type: 'email' })
        .text-fields__inner
          +input-text({ placeholder: 'Пароль', type: 'password' })
      .login-form__button
        +button({"tag": "button", "color": "arrow", "text": "войти", "size": "m"})
      .login-form__login
        span.login-form__text Нет аккаунта на Toxin?
        +button({"tag": "a", "href": "/registration.html", "color": "white", "text": "создать", "size": "m"})