include /components/button-like/button-like
mixin review(obj)
  -const {src, name, time, comment, likes, liked} = obj
  .review.js-review
    img(class="review__img", src=src, alt="ava")
    .review__author
      span.review__name
        =name
      time.review__time
        =time
    .review__button
      +button-like(likes, liked)
    p.review__comment
      !=comment

