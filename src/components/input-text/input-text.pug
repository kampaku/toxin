mixin input-text({label, placeholder, mask, type = 'text'})
  .text-field
    if label
      .text-field__title
        span.text-field__label= label
    if mask
      input(class=`text-field__input js-text-field__input` type="text" placeholder=placeholder autofocus=attributes.autofocus)
    else
      input(class="text-field__input" type=type placeholder=placeholder autofocus=attributes.autofocus)