mixin input-text({label, placeholder, withMask = false, type = 'text', name = null})
  - const maskClass = withMask ? "js-input-text__input" : "";
  .input-text
    if label
      .input-text__title
        span.input-text__label= label
    input(
      class=`input-text__input ${maskClass}`,
      name=name,
      type=type,
      placeholder=placeholder,
      autofocus=attributes.autofocus
    )
