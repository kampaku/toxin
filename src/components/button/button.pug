mixin button(options)
  -var { color, tag, text, href, size } = options
  -
    var themes = {
      'white': 'button button--white',
      'blue': 'button button--blue',
      'transparent': 'button',
      'arrow': 'button button--arrow'
    }
  -
    var sizes = {
      'm': 'button--m',
      's': 'button--s'
    }
  if  tag === 'button'
    button(class=`${themes[color]} ${sizes[size]}`)= text
  if tag === 'a'
    a(class=`${themes[color]} ${sizes[size]}`, href=href)= text
