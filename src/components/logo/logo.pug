mixin logo(text)
  .logo
    if (text)
      a(class="logo-link" href='/landing-page.html')
        img(class="logo__img" src=require("/src/assets/img/icons/logo.svg"), alt="logo")
    else
      a(class="logo-link" href='/landing-page.html')
        img(src=require("/src/assets/img/icons/ui-logo.svg"), alt="logo")